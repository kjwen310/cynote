generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ROLE {
  OWNER
  MEMBER
}

model User {
  id           String         @id @unique
  name         String?
  email        String         @unique
  image        String?
  collaborator Collaborator[]
  workspace    Workspace[]
}

model Collaborator {
  id           String    @id @unique
  displayName  String?
  displayImage String?
  role         ROLE
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspaceId  String
  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Workspace {
  id          String         @id @unique
  title       String
  description String
  image       String?
  ownerId     String
  owner       User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  member      Collaborator[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}
